generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Punishment {
  id            Int      @id @default(autoincrement())
  created_at    DateTime
  punished_name String   @unique
  qtt_days      Int
  active        Boolean
  user          User     @relation(fields: [userId], references: [id])
  userId        Int

  @@map("punishments")
}

model User {
  id                 Int          @id @default(autoincrement())
  created_at         DateTime
  name               String       @unique
  senha              String
  active             Boolean
  createdPunishments Punishment[]

  @@map("users")
}
